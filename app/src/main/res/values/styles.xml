<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#36C5F3</item>
        <item name="colorPrimaryDark">#36C5F3</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#36C5F3</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#BEBEC1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#DDDDDF</item>
    </style>
</resources>
