<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfbfbf"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/info_cfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#fff"
        android:gravity="center"
        android:text="jdjdjgdugb" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/image_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="7"
            android:background="#fff"
            android:src="@drawable/b44" />

        <View
            android:id="@+id/line_in_between"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:background="#a6a6a6" />

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_goal">

                <ProgressBar
                    android:id="@+id/circularProgressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:indeterminate="false"
                    android:max="100"
                    android:padding="3dp"
                    android:progress="15"
                    android:progressDrawable="@drawable/circular"
                    android:secondaryProgress="100" />

                <TextView
                    android:id="@+id/progress_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="$184"
                    android:textColor="#5F65BB"
                    android:textStyle="bold" />
            </RelativeLayout>


            <TextView
                android:id="@+id/text_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#fff"
                android:gravity="center"
                android:text="GOAL $800"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="#fff"
        android:gravity="center"
        android:text="sfsfsdfsdf" />

</LinearLayout>